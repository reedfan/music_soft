<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ustc.reed.mapper.TaskMapper">

    <!-- 自定义返回结果集 -->
    <resultMap id="BaseResultMap" type="com.ustc.reed.pojo.DtTask">

    </resultMap>
    <!-- 通过ID查询一个用户 -->
    <select id="findTasks" resultType="Integer">
        select count(*)  from dt_task where u_id=0 and  status &lt; 2
    </select>


    <select id="findUserListCount" resultType="Integer">
        select count(*)  from dt_user where status = 1
    </select>






</mapper>
