<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ustc.reed.mapper.MusicEntryMapper">

    <!-- 自定义返回结果集 -->
        <resultMap id="BaseResultMap" type="com.ustc.reed.pojo.MusicEntry">
             <id property="id" column="id" javaType="java.lang.Long"></id>
            <result column="entry_keywords" property="entryKeywords" jdbcType="VARCHAR"></result>
            <result column="official_explain" property="officialExplain" javaType="java.lang.String"></result>
            <result column="oral_explain" property="oralExplain" javaType="java.lang.String"></result>
            <result column="create_user_id" property="createUserId" javaType="java.lang.Long"></result>
            <result column="create_time" property="createTime" javaType="java.util.Date"></result>
            <result column="update_time" property="updateTime" javaType="java.util.Date"></result>
         </resultMap>

    <!-- 通过ID查询一个用户 -->
    <select id="findEntryByEntryKeywords" resultMap="BaseResultMap">
        SELECT * FROM music_entry where entry_keywords = #{keyWords};
    </select>

    <insert id="addEntry" parameterType="MusicEntry" >
        INSERT INTO music_entry(entry_keywords,official_explain,oral_explain,create_user_id,create_time,update_time) VALUES (#{entryKeywords},#{officialExplain},#{oralExplain},#{createUserId},#{createTime},#{updateTime}) ;
    </insert>
</mapper>
