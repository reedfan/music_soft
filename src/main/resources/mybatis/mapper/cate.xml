<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ustc.reed.mapper.CateMapper">

    <!-- 自定义返回结果集 -->
    <resultMap id="BaseResultMap" type="com.ustc.reed.pojo.DtCate">
        <id column="c_id" property="cId"  javaType="java.lang.Integer"></id>
        <result column="catename" property="cateName" javaType="java.lang.String"></result>
        <result column="info" property="info" javaType="java.lang.String"></result>

        <result column="picture" property="picture" javaType="java.lang.String"></result>

        <result column="status" property="status" javaType="java.lang.Integer"></result>

        <result column="createtime" property="createTime" javaType="java.lang.Integer"></result>

    </resultMap>


    <select id="findCate" resultMap="BaseResultMap">
        select * From dt_cate where status=1
    </select>


    <select id="findCateList" resultMap="BaseResultMap">
        select * from dt_cate where status &lt; 2 LIMIT #{offSet},#{limit};
    </select>


    <select id="findCateListCount" resultType="Integer">
        select count(*)  from dt_cate where status &lt; 2
    </select>




</mapper>
